{
  "name": "@responsible-vibe/visualizer",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.ts",
  "module": "dist/index.ts",
  "exports": {
    ".": "./dist/index.ts",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "mkdir -p dist && cp -r src/* dist/",
    "dev": "npm run build && nodemon --watch src --ext ts,vue,js --exec 'npm run build'",
    "clean:build": "rimraf ./dist",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "vue": "^3.4.0",
    "d3": "^7.8.5",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "nodemon": "^3.0.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
